<div class="row">
    <div class="col-xl-4 col-lg-3">
        <div class="entry-area">
            <select class="entry-input" id=personel>
                <option value="-" id="listpersonel">FE NAME</option>
            </select>
        </div>

        <div class="entry-area">
            <select class="entry-input" id=brand>
                <option value="-" id="listbrand">BRAND</option>
            </select>
        </div>

        <div class="entry-area">
            <select class="entry-input" id=itemtype>
                <option value="-" id="listitemtype">ITEM TYPE</option>
            </select>
        </div>

        <div class="entry-area">
            <select class="entry-input" id=serial>
                <option value="-" id="listserial">SERIAL</option>
            </select>
        </div>

        <div class="entry-area">
            <button class="" id="addBtn" name="addBtn">ADD</button>
        </div>
    </div>

    <div class="col-xl-6 col-lg-5">
        <table id="requestlist-item-tbl">
            <thead>
                <th>FE NAME</th>
                <th>BRAND</th>
                <th>ITEM TYPE</th>
                <th>SERIAL</th>
            </thead>
            <tbody></tbody>
        </table>
        <div class="entry-area">
            <button class="" id="transferBtn" name="transferBtn">TRANSFER</button>
        </div>
    </div>
</div>

<hr>
<div>
    <table id="request-tbl">
        <thead>
            <th>DATETIME</th>
            <th>PERSONEL</th>
            <th>DETAILS</th>
            <th>FROM</th>
            <th>TO</th>
            <th>REMARKS</th>
            <th>STATUS</th>
        </thead>
        <tbody></tbody>

    </table>
</div>


<!-- The Modal -->
<div id="requestModal" class="modal card shadow mb-4">
    <!-- Modal content -->
    <div id="transfermodal" class="modal-content">
        <div class="modal-button-container">
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xl-6 col-lg-5">
                    <h1 class="center-text">FROM</h1>
                    <div class="entry-area">

                        <select class="entry-input" id=officetypefrom>
                            <option value="-" id="listofficetypefrom">LOCATION TYPE</option>
                        </select>
                    </div>

                    <div id="togglefrom" class="entry-area">
                        <select class="entry-input" id=clientnamefrom>
                            <option value="-" id="listclientnamefrom">CLIENT NAME</option>
                        </select>
                    </div>

                    <div class="entry-area">
                        <select class="entry-input" id=locationfrom>
                            <option value="-" id="listlocationfrom">SELECT LOCATION</option>
                        </select>
                    </div>
                </div>

                <div class="col-xl-6 col-lg-5">
                    <h1 class="center-text">TO</h1>
                    <div class="entry-area">
                        <select class="entry-input" id=officetypeto>
                            <option value="-" id="listofficetypeto">LOCATION TYPE</option>
                        </select>
                    </div>

                    <div id="toggleto" class="entry-area">
                        <select class="entry-input" id=clientnameto>
                            <option value="-" id="listclientnameto">CLIENT NAME</option>
                        </select>
                    </div>

                    <div class="entry-area">
                        <select class="entry-input" id=locationto>
                            <option value="-" id="listlocationto">SELECT LOCATION</option>
                        </select>
                    </div>
                </div>
            </div>
            <br>
            <div class="row input-area center-content">
                <textarea id="remarks" name="remarks" rows="10" cols="100"
                    placeholder="REMARKS / REQUEST MESSAGE"></textarea>
            </div>
            <!-- <div
                style="background: linear-gradient(to bottom, #3399ff 0%, #00ffff 100%); position: relative; align-content: center;">

            </div> -->
        </div>


        <div id="modal-button-container" class="center-content">
            <!-- <a class="success btn-glow" href="/EquipmentPullout/returnReport"> GENERATE RETURN </a> -->
            <button class="btn-glow-modal" id="saveBtn" name="saveBtn">SAVE</button>
        </div>
    </div>
</div>