<script>
    $(document).ready(function () {
        var dataArr = [];

        var dataTable = $('#item-tbl').DataTable({
            'destroy': true,
            'processing': true,
            'serverSide': true,
            'paging': false,
            'searching': false,
            'info': false,
            'scrollY': 400,
            'scrollCollapse': true,
            'serverMethod': 'get',
            'ajax': {
                'url': '/items/load',
            },
            'columns': [
                { data: 'itemcode' },
                { data: 'department' },
                { data: 'itemname' },
                { data: 'brandname' },
                { data: 'createdby' },
                { data: 'createddate' },
            ]
        });

        $.ajax({
            type: "GET",
            url: "/positions/load",
            success: function (result) {
                console.log(result.data);

                $.each(result.data, function (key, item) {
                    var options = new Option(item.positionname, item.positionname);
                    $(options).html(item.positionname);
                    $('#positions').append(options);
                    console.log(item.positionname);
                });
            },
            error: function (result) {
                alert('error: ' + result.data);
            }
        });

        $(document).on('click', "#saveBtn", function () {
            var itemcode = $('#itemcode').val();
            var department = $('#department').val();
            var itemname = $('#itemname').val();
            var brandname = $('#brandname').val();
            var createdby = createdby == null ? 'CREATOR' : '';
            var createddate = createddate == null ? '2022-10-26' : '';

            var message = "";

            if (itemcode == "") { message += "Item Code " }
            if (itemname == "") { message += "Item Name " }
            if (brandname == "") { message += "Brand Name " }
            if (department == "-") { message += "Department " }
          

            if (message != "") { warning("Warning!", "Must fill-up " + message + " field!") }
            else {
                dataArr.push({
                    'itemcode': itemcode,
                    'department': department,
                    'itemname': itemname,
                    'brandname': brandname,
                    'createdby': createdby,
                    'createddate': createddate
                });

                var data = JSON.stringify(dataArr, null, 2);

                $.ajax({
                    type: "POST",
                    url: "/items/save",
                    data: {
                        itemname: itemname,
                        itemcode: itemcode,
                        department: department,
                        data: data
                    },
                    success: function (result) {
                        success('Saved!', 'Data saved!')
                        $('#item-tbl').DataTable().ajax.reload();
                        dataArr = [];
                    },
                    error: function (result) {
                        error(result.data);
                    }
                });
            }

        });
    })
</script>