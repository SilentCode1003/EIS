<div class="row">
    <div class="col-xl-5 col-lg-4">
        <div class="entry-area">
            <input class="entry-input" type="text" data-field="date" placeholder="PO DATE" readonly id="podate"
                name="podate">
            <div id="podate-dtbox"></div>
        </div>
        <div class="entry-area">
            <input type="text" class="entry-input" id="ponumber" name="ponumber" placeholder="PO NUMBER">
        </div>
        <div class="entry-area">
            <select class="entry-input" id=brandname>
                <option value="-" id="listbrandname">BRAND NAME</option>
            </select>
        </div>
        <div class="entry-area">
            <select class="entry-input" id=itemtype>
                <option value="-" id="listitemtpye">ITEM TYPE</option>
            </select>
        </div>
        <div class="entry-area">
            <input type="text" class="entry-input" id="quantity" name="quantity" placeholder="QUANTITY">
        </div>
        <div class="entry-area">
            <input type="text" class="entry-input" id="cost" name="cost" placeholder="COST">
        </div>
        <div class="entry-area">
            <button class="approve-btn" id="addBtn" name="addBtn">ADD</button>
        </div>
    </div>

    <div class="col-xl-6 col-lg-5">
        <div>
            <table id="po-list-tbl">
                <thead>
                    <th>PO DATE</th>
                    <th>PO NUMBER</th>
                    <th>BRAND</th>
                    <th>TYPE</th>
                    <th>QUANTITY</th>
                    <th>COST</th>
                    <th>SUBTOTAL</th>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="entry-area">
            <button class="approve-btn" id="restockBtn" name="restockBtn">RE-STOCK</button>
        </div>
    </div>
</div>

<hr>

<div>
    <table id="po-orderlist-tbl">
        <thead>
            <th>PO DATE</th>
            <th>DETAILS</th>
            <th>TOTAL COST</th>
            <th>PURCHASING OFFICER</th>
            <th>ENTRY DATE</th>
            <th>STATUS</th>
        </thead>
        <tbody></tbody>
    </table>
</div>


<!-- The Modal -->
<div id="restockmodal" class="modal card shadow mb-4">
    <!-- Modal content -->
    <div id="transfermodal" class="modal-content">
        <div class="modal-button-container">
            <span id="restockmodalspan" class="close">&times;</span>
        </div>
        <div class="modal-body">
            <div class="row input-area center-content">
                <div class="entry-area">
                    <input type="text" class="entry-input" id="requestid" name="requestid" placeholder="REQUEST ID">
                </div>
            </div>
            <!-- <div
                style="background: linear-gradient(to bottom, #3399ff 0%, #00ffff 100%); position: relative; align-content: center;">

            </div> -->
        </div>


        <div id="modal-button-container" class="center-content">
            <!-- <a class="success btn-glow" href="/EquipmentPullout/returnReport"> GENERATE RETURN </a> -->
            <button class="approve-btn" id="saveBtn" name="saveBtn">SAVE</button>
        </div>
    </div>
</div>