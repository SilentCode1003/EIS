<script>
    $(document).ready(function () {
        loadtable();
        let DataTable;

        $("#dtbox").DateTimePicker({
            dateFormat: "yyyy-MM-dd"
        });

        $.ajax({
            type: "POST",
            url: "/personel/personelposition",
            data: { position: 'CABLING' },
            success: function (result) {
                console.log(result.data);
                var data = result.data;

                $.each(data, function (key, item) {
                    var options = new Option(item.fullname, item.fullname);
                    $(options).html(item.fullname);
                    $('#personel').append(options);
                    console.log(item.fullname);
                });
            },
            error: function (result) {
                alert('error: ' + result.data);
            }
        });

        $(document).on('click', "#exportBtn", function () {
            console.log('clicked!');
            var content = $('#transaction-table tr');
            var headerArr = [];
            var dataArr = [];
            var filename = 'Cabling_Report';

            console.log(content.length);
            var index = 1;
            for (x = 0; x < content.length; x++) {
                // console.log(header[x].innerText);
                console.log(content[x].innerText);
                var innerData = content[x].innerText;
                innerData = innerData.split("\t");

                dataArr.push({
                    transactionid: innerData[0],
                    requestby: innerData[1],
                    requestdate: innerData[2],
                    brandname: innerData[3],
                    itemtype: innerData[4],
                    quantity: innerData[5],
                    approvedby: innerData[6],
                    approveddate: innerData[7],
                    requestid: innerData[8],
                    status: innerData[9],
                });
            }

            console.log(dataArr);

            $.ajax({
                type: 'POST',
                url: '/transfer/excel',
                data: {
                    data: dataArr,
                    filename: filename
                },
                success: function (result) {
                    success('Success', 'Export to excel success');
                },
                error: function (error) {
                    error(error);
                }
            })
        })

        $(document).on('click', "#searchBtn", function () {
            var dateto = $('#dateto').val();
            var datefrom = $('#datefrom').val();
            var personel = $('#personel').val();

            showloader();
            dataTable = $('#transaction-table').DataTable({
                'destroy': true,
                'processing': true,
                'serverSide': true,
                'paging': false,
                'searching': false,
                'info': false,
                'scrollY': 400,
                'scrollCollapse': true,
                'serverMethod': 'POST',
                'ajax': {
                    'url': '/cablingreport/search',
                    'data': {
                        personel: personel,
                        dateto: dateto,
                        datefrom: datefrom
                    }
                },
                'columns': [

                    { data: 'transactionid' },
                    { data: 'requestby' },
                    { data: 'requestdate' },
                    { data: 'brandname' },
                    { data: 'itemtype' },
                    // { data: 'itemcost' },
                    { data: 'quantity' },
                    { data: 'approvedby' },
                    { data: 'approveddate' },
                    { data: 'requestid' },
                    { data: 'status' },

                ],
                initComplete: function () {
                    console.log('init complete');
                    hideload();
                }
            });
        })

        function loadtable() {
            showloader();
            dataTable = $('#transaction-table').DataTable({
                'destroy': true,
                'processing': true,
                'serverSide': true,
                'paging': false,
                'searching': false,
                'info': false,
                'scrollY': 400,
                'scrollCollapse': true,
                'serverMethod': 'GET',
                'ajax': {
                    'url': '/cablingreport/load'
                },
                'columns': [

                    { data: 'transactionid' },
                    { data: 'requestby' },
                    { data: 'requestdate' },
                    { data: 'brandname' },
                    { data: 'itemtype' },
                    // { data: 'itemcost' },
                    { data: 'quantity' },
                    { data: 'approvedby' },
                    { data: 'approveddate' },
                    { data: 'requestid' },
                    { data: 'status' },

                ],
                initComplete: function () {
                    console.log('init complete');
                    hideload();
                }
            });
        };
    })
</script>